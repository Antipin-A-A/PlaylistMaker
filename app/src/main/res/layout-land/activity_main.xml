<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="@dimen/indent_16dp"
    app:circularflow_radiusInDP="12dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        style="@style/TextStyleTullBar"
        android:layout_marginStart="@dimen/indent_4dp"
        android:text="@string/playlist_market"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp">


        <Button
            android:id="@+id/button_search"
            style="@style/ButtonStyle"
            android:text="@string/Poisk"
            app:icon="@drawable/light_mode_search" />

        <Button
            android:id="@+id/button_music"
            style="@style/ButtonStyle"
            android:text="@string/mediateka"
            app:icon="@drawable/baseline_library_music_24" />


        <Button
            android:id="@+id/button_setting"
            style="@style/ButtonStyle"
            android:text="@string/system_text"
            app:icon="@drawable/light_mode_system" />


    </LinearLayout>

</LinearLayout>