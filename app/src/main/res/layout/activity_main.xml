<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/LayoutStyle"
    android:background="@color/blue"
    android:paddingBottom="@dimen/indent_28dp"
    tools:context=".main.activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/playlist_market"
        app:titleMargin="8dp"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarStyle">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/indent_24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            style="@style/ButtonStyle"
            android:text="@string/search_text"
            app:icon="@drawable/light_mode_search" />

        <Button
            android:id="@+id/button_music"
            style="@style/ButtonStyle"
            android:text="@string/mediateka"
            app:icon="@drawable/baseline_library_music_24" />


        <Button
            android:id="@+id/button_setting"
            style="@style/ButtonStyle"
            android:text="@string/system_text"
            app:icon="@drawable/light_mode_system" />

    </LinearLayout>

</LinearLayout>