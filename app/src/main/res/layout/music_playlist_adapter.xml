<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".main.activity.RootActivity">

    <ImageView
        android:id="@+id/imageMusicGroup"
        android:layout_width="@dimen/indent_45dp"
        android:layout_height="@dimen/indent_45dp"
        android:layout_marginStart="@dimen/indent_13dp"
        android:layout_marginTop="@dimen/indent_8dp"
        android:layout_marginEnd="@dimen/indent_8dp"
        android:layout_marginBottom="@dimen/indent_8dp"
        android:importantForAccessibility="no"
        android:src="@drawable/empty_image_group" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/indent_66dp"
        android:layout_marginTop="@dimen/indent_14dp"
        android:layout_marginEnd="@dimen/indent_44dp"
        android:layout_marginBottom="@dimen/indent_14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listName"
            style="@style/TextStyleSearchMusic"
            android:ellipsize="end"
            tools:text="Yesterday (Remastered 2009)" />

        <TextView
            android:id="@+id/countTrack"
            style="@style/TextStyleSearchMusic"
            android:textColor="@color/colorTextNameTime"
            android:textSize="@dimen/text_size_11sp"
            tools:text="@string/count_track" />

    </LinearLayout>

</FrameLayout>