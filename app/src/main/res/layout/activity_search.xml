<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    style="@style/LayoutStyle"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start">

        <TextView
            android:id="@+id/button_back_Search"
            style="@style/TextStyleTullBar"
            android:text="@string/search_text"
            app:drawableStartCompat="@drawable/baseline_arrow_back" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputEditText"
            style="@style/TextStyleSetting"
            android:layout_width="match_parent"
            android:background="@drawable/edittext"
            android:drawableStart="@drawable/search_12_icon"
            android:drawablePadding="@dimen/indent_4dp"
            android:drawableTint="@color/gray_Night"
            android:inputType="text"
            android:hint="@string/search_text"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_Night"
            android:textColorLink="@color/color_cursor" />

        <ImageView
            android:id="@+id/button_search_clean"
            android:layout_width="@dimen/indent_16dp"
            android:layout_height="@dimen/indent_16dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/indent_8dp"
            android:visibility="gone"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/black" />
    </FrameLayout>

</LinearLayout>