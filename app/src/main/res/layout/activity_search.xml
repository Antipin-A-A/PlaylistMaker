<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/indent_16dp"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/baseline_arrow_back"
            app:tint="@color/blackNight" />

        <TextView
            style="@style/TextStyleTullBar"
            android:layout_margin="12dp"
            android:text="@string/setting"
            android:textColor="@color/blackNight" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/light_mode_search"
            app:tint="@color/blackNight" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="@string/text_hint_search" />

        <ImageView
            android:id="@+id/button_search_clean"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center|fill_horizontal|left"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/blackNight"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>