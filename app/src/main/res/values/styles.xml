<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="FrameStyleSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:layout_marginEnd">@dimen/indent_12dp</item>
    </style>


    <style name="TextStyleTullBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/blackNight</item>
        <item name="android:drawableTint">@color/blackNight</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginTop">@dimen/indent_10dp</item>
        <item name="android:layout_marginStart">@dimen/indent_12dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">@dimen/indent_14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconSize">@dimen/icon_size_24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextStyleSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/blackNight</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginTop">@dimen/indent_21dp</item>
        <item name="android:layout_marginBottom">@dimen/indent_21dp</item>
    </style>

    <style name="ImageViewStyleSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
    </style>

    <style name="Arrow_back">
        <item name="android:layout_width">@dimen/indent_24dp</item>
        <item name="android:layout_height">@dimen/indent_24dp</item>
        <item name="android:layout_margin">@dimen/indent_12dp</item>
    </style>

    <style name="TextStyleSearchMusic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorTextTrack</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/blackNight</item>
        <item name="android:drawableTint">@color/blackNight</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>