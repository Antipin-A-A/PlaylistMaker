<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LayoutStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">@dimen/indent_16dp</item>

    </style>

    <style name="TextStyleTullBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_22sp</item>
        <item name="android:textColor">@color/blackNight</item>
        <item name="android:drawableTint">@color/blackNight</item>
        <item name="android:drawablePadding">@dimen/indent_4dp</item>
        <item name="android:layout_marginTop">@dimen/indent_12dp</item>
        <item name="android:layout_marginBottom">@dimen/indent_12dp</item>

    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">@dimen/indent_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_22sp</item>
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_size_24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>

    </style>

    <style name="TextStyleSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">@color/blackNight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ImageViewStyleSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:padding">@dimen/indent_8dp</item>
    </style>

</resources>